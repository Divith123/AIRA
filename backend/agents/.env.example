# =============================================================================
# LIVEKIT SELF-HOSTED AI CONFIGURATION
# =============================================================================
# Copy this file to .env and configure for your deployment
#
# Modes:
#   api    - Use paid API providers only
#   local  - Use self-hosted open-source only
#   hybrid - API with local fallback (recommended)
# =============================================================================

# =============================================================================
# LIVEKIT CONNECTION
# =============================================================================
LIVEKIT_URL=ws://localhost:7880
LIVEKIT_API_KEY=devkey
LIVEKIT_API_SECRET=secret

# =============================================================================
# AGENT MODE
# =============================================================================
AGENT_MODE=hybrid  # api | local | hybrid

# =============================================================================
# STT (Speech-to-Text) CONFIGURATION
# =============================================================================
# --- API Providers ---
STT_PROVIDER=deepgram  # openai | deepgram | groq
DEEPGRAM_API_KEY=your-deepgram-api-key
GROQ_API_KEY=your-groq-api-key
# OPENAI_API_KEY is shared with LLM below

# --- Local Whisper ---
STT_FALLBACK_PROVIDER=local
WHISPER_LOCAL_URL=http://localhost:8000/v1
WHISPER_MODEL=Systran/faster-whisper-large-v3-turbo
WHISPER_DEVICE=cuda  # cpu | cuda
WHISPER_COMPUTE_TYPE=float16  # int8 | float16

# =============================================================================
# TTS (Text-to-Speech) CONFIGURATION
# =============================================================================
# --- API Providers ---
TTS_PROVIDER=cartesia  # openai | cartesia | elevenlabs
CARTESIA_API_KEY=your-cartesia-api-key
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# --- Local TTS ---
TTS_FALLBACK_PROVIDER=local
TTS_IMPLEMENTATION=kokoro  # kokoro | piper
KOKORO_URL=http://localhost:8880/v1
KOKORO_VOICE=af_bella  # See Kokoro docs for voice options
PIPER_URL=http://localhost:10200/v1
PIPER_VOICE=en_US-lessac-medium

# =============================================================================
# LLM (Language Model) CONFIGURATION
# =============================================================================
# --- API Providers ---
LLM_PROVIDER=openai  # openai | anthropic | groq
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
LLM_MODEL=gpt-4o-mini

# --- Local LLM (Ollama) ---
LLM_FALLBACK_PROVIDER=local
LOCAL_LLM_URL=http://localhost:11434/v1
LOCAL_LLM_MODEL=llama3.2:3b

# =============================================================================
# VAD (Voice Activity Detection) - Always Local
# =============================================================================
VAD_THRESHOLD=0.5
VAD_MIN_SPEECH_DURATION=0.15
VAD_MIN_SILENCE_DURATION=0.3

# =============================================================================
# TURN DETECTION - Always Local
# =============================================================================
TURN_DETECTOR_MODEL=multilingual  # english | multilingual
